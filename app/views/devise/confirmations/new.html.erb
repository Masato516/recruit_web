<div class="container">

  <h1><%= t('.resend_confirmation_instructions') %></h1>

  <%= form_with model: @user, scope: 'user', url: user_confirmation_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= bootstrap_devise_error_messages! %>
    
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', value: (@user.pending_reconfirmation? ? @user.unconfirmed_email : @user.email), class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.resend_confirmation_instructions'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>

</div>